@model IEnumerable<ERPBO.Inventory.ViewModels.WarehouseStockInfoViewModel>
@{
    int sl = 0;
}
<table class="table table-bordered table-sm table-striped" id="tblWarehouseStockInfo">
    <thead class="btn-dark">
        <tr class="text-center">
            <th>SL No.</th>
            <th class="hide"></th>
            <th class="hide"></th>
            <th>Warehouse</th>
            <th class="hide"></th>
            <th>Item Type</th>
            <th class="hide"></th>
            <th>Item</th>
            <th>Stock-In Qty</th>
            <th>Stock-Out Qty</th>
            <th class="hide"></th>
            <th>Unit</th>
            <th>Remarks</th>
        </tr>
    </thead>
    <tbody></tbody>
    <tbody>
        @foreach (var info in Model)
        {
            sl = sl + 1;
            <tr>
                <td class="text-center" width="10%">@sl</td>
                <td class="hide">@info.StockInfoId</td>
                <td class="hide">@info.WarehouseId</td>
                <td>@info.Warehouse</td>
                <td class="hide">@info.ItemTypeId</td>
                <td>@info.ItemType</td>
                <td class="hide">@info.ItemId</td>
                <td>@info.Item</td>
                <td class="text-center">@info.StockInQty</td>
                <td class="text-center">@info.StockOutQty</td>
                <td class="hide">@info.UnitId</td>
                <td class="text-center">@info.Unit</td>
                <td>@info.Remarks</td>
            </tr>
        }
        @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="13">
                        No data available in table
                    </td>
                </tr>
            }
    </tbody>
</table>